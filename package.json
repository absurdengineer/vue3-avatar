{
  "name": "vue3-avatar",
  "version": "4.1.1",
  "license": "MIT",
  "description": "A lightweight, fully customizable, accessible, and SSR-safe user avatar component for Vue 3 and Nuxt. Supports initials, custom images, pixel-art generation (identicons), groups with overflow, and auto-contrast text. Perfect for user profiles, team displays, and comment sections.",
  "main": "dist/avatar.ssr.js",
  "browser": "dist/avatar.esm.js",
  "module": "dist/avatar.esm.js",
  "unpkg": "dist/avatar.min.js",
  "files": [
    "dist/*",
    "src/**/*.vue"
  ],
  "sideEffects": false,
  "scripts": {
    "serve": "cross-env NODE_OPTIONS=--openssl-legacy-provider vue-cli-service serve dev/serve.js",
    "prebuild": "rimraf ./dist",
    "build": "cross-env NODE_ENV=production rollup --config build/rollup.config.js",
    "build:ssr": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format cjs",
    "build:es": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format es",
    "build:unpkg": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format iife",
    "test": "vitest"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "@rollup/plugin-alias": "^3.1.2",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-replace": "^2.4.2",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vue/babel-preset-app": "^4.5.15",
    "@vue/cli-plugin-babel": "^4.5.13",
    "@vue/cli-service": "^4.5.13",
    "@vue/compiler-sfc": "^3.0.11",
    "@vue/test-utils": "^2.4.6",
    "cross-env": "^7.0.3",
    "jsdom": "^27.3.0",
    "minimist": "^1.2.5",
    "postcss": "^8.2.10",
    "rimraf": "^3.0.2",
    "rollup": "^2.52.8",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-vue": "^6.0.0",
    "vitest": "^4.0.15",
    "vue": "^3.0.5"
  },
  "peerDependencies": {
    "vue": "^3.0.5"
  },
  "engines": {
    "node": ">=12"
  },
  "keywords": [
    "vue",
    "vue3",
    "avatar",
    "vue3-avatar",
    "user-avatar",
    "profile-picture",
    "identicon",
    "initials",
    "pixel-art",
    "component",
    "ui",
    "nuxt",
    "ssr",
    "typescript-ready",
    "accessible",
    "a11y",
    "vuejs"
  ],
  "homepage": "https://github.com/absurdengineer/vue3-avatar#readme",
  "bugs": {
    "url": "https://github.com/absurdengineer/vue3-avatar/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/absurdengineer/vue3-avatar.git"
  }
}
